<UserControl x:Class="GitDesk.WelcomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BgDarkBrush}">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
        <StackPanel>
            <!-- Logo -->
            <TextBlock Text="â‘‚" FontSize="72" Foreground="{StaticResource AccentBlueBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock.Effect>
                    <DropShadowEffect Color="{StaticResource AccentBlue}" BlurRadius="30"
                                      ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="GitDesk" FontSize="36" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>

            <TextBlock Text="A beautiful Git client" FontSize="15"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <!-- Quick actions -->
            <StackPanel HorizontalAlignment="Center" Width="320">
                <Button Content="ðŸ“‚  Open a Repository" Style="{StaticResource ModernButton}"
                        Click="OpenRepo_Click" FontSize="14" Padding="20,12" Margin="0,0,0,8"
                        HorizontalAlignment="Stretch"/>
                <Button Content="ðŸ“‹  Clone a Repository" Style="{StaticResource ModernButton}"
                        Click="CloneRepo_Click" FontSize="14" Padding="20,12" Margin="0,0,0,8"
                        HorizontalAlignment="Stretch"/>
                <Button Content="âœ¨  Initialize New Repository" Style="{StaticResource ModernButton}"
                        Click="InitRepo_Click" FontSize="14" Padding="20,12" Margin="0,0,0,8"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Recent repos -->
            <TextBlock Text="Recent Repositories" FontSize="13" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,32,0,12"/>

            <ListBox x:Name="RecentReposList" Background="Transparent" BorderThickness="0"
                     HorizontalAlignment="Center" Width="320"
                     MouseDoubleClick="RecentRepo_DoubleClick">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Margin" Value="0,1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="border" Background="Transparent"
                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background"
                                                    Value="{StaticResource BgHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" Margin="0,0,8,0" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" FontSize="13"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Shortcuts hint -->
            <Border Background="{StaticResource BgMediumBrush}" CornerRadius="8" Padding="16,12"
                    Margin="0,24,0,0" HorizontalAlignment="Center" Width="320">
                <StackPanel>
                    <TextBlock Text="Keyboard Shortcuts" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Open repo" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+O" FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Stage all" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+Shift+A" FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Fetch" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+Shift+F" FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Pull" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+Shift+P" FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Refresh" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="F5" FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,2"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
